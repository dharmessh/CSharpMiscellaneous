using System;

namespace Practice
{
    internal class Program
    {
        static void Main()
        {
            Console.WriteLine("Enter the length of Fibonacci series you want:");
            string? fibLength = Console.ReadLine();
            List<int> fibonacci = new List<int>();

            if (int.TryParse(fibLength, out int length) && length >= 1)
            {
                fibonacci = Fibonnaci(length);
            }
            else
            {
                Console.WriteLine("Please enter a valid positive integer greater than or equal to 1.");
                return;
            }

            Console.WriteLine("---------OUTPUT---------");
            foreach (var item in fibonacci)
            {
                Console.WriteLine(item);
            }
        }

        // Function to generate Fibonacci series
        public static List<int> Fibonnaci(int fibLength)
        {
            List<int> fibonacci = new List<int>();

            int firstNum = 0;
            int SecondNum = 1;
            
            if(fibLength >= 1) fibonacci.Add(firstNum);
            if(fibLength >= 2) fibonacci.Add(SecondNum);
           
            for (int i = 0; i < fibLength - 2; i++)
            {
                int NextNum = firstNum + SecondNum;
                firstNum = SecondNum;
                SecondNum = NextNum;
                fibonacci.Add(NextNum);
            }
            return fibonacci;
        }

    }
}
